<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.asudevelopers.financemanager.viewmodel.PersonViewModel"/>
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/default_margin"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.asudevelopers.financemanager.PersonActivity"
        tools:showIn="@layout/activity_person">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@={viewModel.person.name}"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:text="@={viewModel.person.phone}"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> viewModel.savePerson(viewModel.person)}"
            android:text="Save"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> viewModel.loadPerson()}"
            android:text="Load"/>

        <EditText
            android:id="@+id/et_name_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.personOut.name}"/>

        <EditText
            android:id="@+id/et_phone_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.personOut.phone}"/>

    </LinearLayout>
</layout>
